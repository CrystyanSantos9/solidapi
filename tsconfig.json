{
  "compilerOptions": {
    "target": "es2017",  
    "allowJs": true,       //isso porque ainda há bibliotecas sem suporte a JS                        
    "module": "commonjs",                                                   
    "esModuleInterop": true,                       
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true      
  },
 "include": [ //informa para o transpilador ler qualquer arquivo que esteja no src que tenha a extensão ts
   "src/**/*.ts"
 ]
}
